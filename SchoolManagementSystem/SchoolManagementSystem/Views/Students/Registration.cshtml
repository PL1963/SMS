@model SchoolManagementSystem.Models.ViewModel.AddStudentViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Student Details</title>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/validator/13.5.0/validator.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


    <script src="~/js/FormValidation.js"></script>
    <link rel="stylesheet" href="~/css/sform.css" />
    <style>
    button {
    margin-left: 10px; /* Adjust the left margin */
    margin-right: 10px; /* Adjust the right margin */
    margin-top: 5px; /* Adjust the top margin */
    margin-bottom: 5px; /* Adjust the bottom margin */
        }</style>

</head>
<body>
    <h3>Registration Form</h3>
    <div class="form-container">
        <h6> Student Details</h6>
        <hr />

        <form class="row g-3" method="post" id="form">

            <div class="row">
                <div class="col-md-8">
                    <label class="form-label">First Name</label>
                    <input type="text" class="form-control" asp-for="FirstName" />
                </div>
           
                <div class="col-md-8">
                    <label class="form-label">Last Name</label>
                    <input type="text" class="form-control" asp-for="LastName" />
                </div>
                <div class="col-md-8">
                    <label class="form-label">Age</label>
                    <input type="text" class="form-control" asp-for="Age" />
                </div>
                <div class="col-md-8">
                    <label class="form-label">DOB</label>
                    <input type="date" class="form-control" asp-for="DateOfBirth" />
                </div>
                <div class="col-md-8">
                    <label class="form-label">Gender</label>
                    <select class="form-control" asp-for="Gender">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="TransGender">TransGender</option>
                    </select>
                </div>
                <div class="col-md-8">
                    <label class="form-label">Email</label>
                    <input type="text" class="form-control" asp-for="Email" />
                </div>
                <div class="col-md-8">
                    <label class="form-label">Phone Number</label>
                    <input type="text" class="form-control" asp-for="PhoneNumber" />
                </div>

            <h6>Qualification Details</h6>

           
                <div class="col-md-8">
                    <label class="form-label">Course Name</label>
                    <input type="text" class="form-control" asp-for="CourseName" />
                </div>
           
           
                <div class="col-md-8">
                    <label class="form-label">University</label>
                    <input type="text" class="form-control" asp-for="UniversityName" />
                </div>
            
                <div class="col-md-8">
                    <label class="form-label">Year Of Passing</label>
                    <input type="text" class="form-control" asp-for="YearOfPassing" />
                </div>
                <div class="col-md-8">
                    <label class="form-label">Percentage</label>
                    <input type="text" class="form-control" asp-for="Percentage" />
                </div>
               
                <div class="form-row">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                </div>
        </form>
    </div>




</body>
</html>



